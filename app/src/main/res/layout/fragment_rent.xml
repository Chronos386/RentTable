<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/polished_pink">


    <TextView
        android:id="@+id/text0"
        android:layout_width="0dp"
        android:layout_height="0dp"


        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="25dp"

        android:font="@font/nunito_extrabold"
        android:text="@string/rent"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"

        app:layout_constraintBottom_toTopOf="@+id/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/userImage"
        android:layout_width="25dp"
        android:layout_height="20dp"

        android:layout_marginTop="12dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/img"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"


        app:layout_constraintStart_toEndOf="@+id/text0"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:font="@font/nunito_extrabold"
        android:text="@string/city"

        android:textColor="@color/melon"
        android:textSize="@dimen/textsize"


        app:layout_constraintBottom_toTopOf="@+id/map"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="35dp"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginBottom="0dp"
         />


    <ImageView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src = "@drawable/fon"


        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="0dp"

        android:background="@drawable/dialog_bg"
        app:layout_constraintBottom_toTopOf="@+id/Places_fragmentContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        app:layout_constraintVertical_bias="0.0">

    </ImageView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/Places_fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

